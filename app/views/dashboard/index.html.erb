<p id="notice"><%= notice %></p>

<h1>Overview for <%= date %></h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Sparkline</th>
      <th>Today</th>
      <th>Days to Recovery</th>
      <th>Player's Chart</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= load_sparkline(player, date) %></td>
        <td><%= player.day_load(date) %></td>
        <td><%= player.recovery_days(date) %></td>
        <td><%= link_to "Chart Â»", player_training_load_path(player.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

